<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="semana7.login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Semana 7" HorizontalOptions="Center" FontSize="20"> </Label>
            <Entry Placeholder="Usuario" x:Name="txtUser" Margin="20,30,20,0"></Entry>
            <Entry Placeholder="Contraseña" x:Name="txtContrasenia" Margin="20,0,20,0"></Entry>
            <Button Text="Ingersar" x:Name="btnIngresar" CornerRadius="15" Margin="20,30,20,0" BackgroundColor="Green" TextColor="White" Clicked="btnIngresar_Clicked"> </Button>
            <Button Text="Registrarse" x:Name="btnRegistrar" CornerRadius="15" Margin="20,10,20,0" Clicked="btnRegistrar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>